<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/achtergrond_repeat"
    android:backgroundTint="#CCFFFFFF"
    android:backgroundTintMode="src_over">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="359dp"
        android:layout_height="192dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="26dp"
        app:srcCompat="@drawable/logo" />

    <Button
        android:id="@+id/randomOefening"
        android:layout_width="185dp"
        android:layout_height="75dp"
        android:layout_below="@+id/randomToggle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:backgroundTint="#C1000000"
        android:text="Keersommen oefenen"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/tafelOefening"
        android:layout_width="185dp"
        android:layout_height="75dp"
        android:layout_alignTop="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="206dp"
        android:backgroundTint="#C1000000"
        android:text="Tafels oefenen"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/invoerveld"
        android:layout_width="129dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="140dp"
        android:layout_marginTop="294dp"
        android:layout_marginEnd="140dp"
        android:scaleY="1.2"
        android:scaleX="1.2"
        android:ems="10"
        android:hint="Tafelnummer"

        android:inputType="number" />

    <Switch
        android:id="@+id/randomToggle"
        android:layout_width="127dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="156dp"
        android:layout_marginTop="362dp"
        android:layout_marginEnd="127dp"
        android:checked="false"
        android:scaleX="1.2"
        android:scaleY="1.2"
        android:text="Willekeurige volgorde?" />

</RelativeLayout>