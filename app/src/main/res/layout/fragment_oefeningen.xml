<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        app:srcCompat="@drawable/vraag" />

    <TextView
        android:id="@+id/getoondeSom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"

        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:text="De som"
        android:textColor="@color/colorPrimary"
        android:textSize="70dp" />

    <Button
        android:id="@+id/antKnop1"
        android:layout_width="259dp"
        android:layout_height="67dp"
        android:layout_below="@+id/getoondeSom"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Antwoord"
        android:textSize="40dp"
        android:textColor="#F111" />

    <Button
        android:id="@+id/antKnop2"
        android:layout_width="259dp"
        android:layout_height="67dp"
        android:layout_below="@+id/antKnop1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Antwoord"
        android:textSize="40dp"
        android:textColor="#F111" />

    <Button
        android:id="@+id/antKnop3"
        android:layout_width="259dp"
        android:layout_height="67dp"
        android:layout_below="@+id/antKnop2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Antwoord"
        android:textSize="40dp"
        android:textColor="#F111" />

    <Button
        android:id="@+id/antKnop4"
        android:layout_width="259dp"
        android:layout_height="67dp"
        android:layout_below="@+id/antKnop3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Antwoord"
        android:textSize="40dp"
        android:textColor="#F111" />

</RelativeLayout>